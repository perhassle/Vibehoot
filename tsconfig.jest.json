{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "commonjs",
    "esModuleInterop": true,
    "isolatedModules": false,
    "noEmit": false,
    "types": ["jest", "node", "@testing-library/jest-dom"],
    "noImplicitAny": false,
    "strict": false
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "__tests__/**/*.ts",
    "__tests__/**/*.tsx",
    "jest.setup.ts"
  ],
  "exclude": ["node_modules"]
}
